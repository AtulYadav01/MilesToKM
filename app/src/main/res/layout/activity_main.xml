<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="325dp"
        android:gravity="center_horizontal"
        android:text="@string/Miles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextmiles"
        android:layout_width="159dp"
        android:layout_height="40dp"
        android:layout_marginBottom="200dp"
        android:width="100dp"

        android:autofillHints="Miles"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/miles"
        app:layout_constraintBottom_toTopOf="@+id/buttonConvMilesToKm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toEndOf="@+id/textView"
        tools:ignore="LabelFor,MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="140dp"
        android:text="@string/kilometer"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/buttonConvMilesToKm"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextKm"
        android:layout_width="157dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="104dp"
        android:width="100dp"
        android:autofillHints="Kilometers"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/kilometers"
        app:layout_constraintBottom_toTopOf="@+id/buttonConvMilesToKm"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/buttonConvMilesToKm"
        android:layout_width="280dp"
        android:layout_height="41dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginBottom="36dp"
        android:text="@string/convert_miles_to_km"
        app:layout_constraintBottom_toTopOf="@+id/buttonConvKmToMiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonConvKmToMiles"
        android:layout_width="279dp"
        android:layout_height="46dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="144dp"
        android:text="@string/convert_km_to_miles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>